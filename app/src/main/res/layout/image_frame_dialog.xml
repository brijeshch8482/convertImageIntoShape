<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/clear"
            android:src="@drawable/ic_baseline_clear_24"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="@string/uploaded_image"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:id="@+id/dialogImage" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/original"
                android:background="@drawable/background"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="@string/orignal" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/frame1"
                android:padding="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background"
                android:src="@drawable/user_image_frame_1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/frame2"
                android:padding="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background"
                android:src="@drawable/user_image_frame_2" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/frame3"
                android:padding="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background"
                android:src="@drawable/user_image_frame_3" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/frame4"
                android:padding="2dp"
                android:background="@drawable/background"
                android:src="@drawable/user_image_frame_4" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/dialog_button"
            android:backgroundTint="@color/teal_700"
            android:text="@string/use_this_image"
            android:layout_gravity="center" />

    </LinearLayout>
</layout>